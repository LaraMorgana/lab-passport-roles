<div class="container">

    <h2>Editar {{username}}</h2>

    <form method="POST" action="/boss/edit/{{id}}">

        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username">
        </div>
        
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        
        <div class="form-group">
            <label>Password</label>
            <input type="text" class="form-control" name="password">
        </div>
        
        <div class="form-group">
            <label>Profile Img</label>
            <input type="img" class="form-control" name="profileImg">
        </div>
        
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="description">
        </div>
        
        <div class="form-group">
            <label>Facebook</label>
            <input type="text" class="form-control" name="facebookId">
        </div>
        
        <div class="form-group">
            <label>Role</label>
            <input type="text" class="form-control" name="role">
        </div>

        <button type="submit" class="btn btn-dark">Editar perfil</button>

    </form>

</div>